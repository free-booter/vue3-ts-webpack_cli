{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "types": ["node"]
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }